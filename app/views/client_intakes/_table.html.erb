<div class="table-responsive">
  <table id="<%= id %>" class="table table-striped table-hover rowlink leads_table" data-source="<%= send("#{id}_path") %>">
    <thead class="user-table-head">
    <tr>
      <th>Call Date</th>
      <th>Assigned Attorney</th>
      <th>Injured Party Name</th>
      <th>Estimated Value</th>
      <th>Status</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>
<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $('table').on('mouseenter mouseleave', 'tr', function(){
      $('.status-circle').tipr({
        'speed': 500,
        'mode': 'top'
      });
    });
    $('#<%= id %>').dataTable({
      language: {
        search: "_INPUT_",
        searchPlaceholder: "<%= id.humanize.titleize %> Search",
        lengthMenu: "View _MENU_"
      },
      aaSorting: [[ 0, "desc" ]],
      bProcessing: true,
      bServerSide: true,
      sAjaxSource: $('#<%= id %>').data('source')
    });
  });
</script>