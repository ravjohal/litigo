        <td>
          <%=  @case.name %>
        </td>
      </tr>
      <tr>
        <td class="col-one">
          <strong>Docket Number:</strong>
        </td>
        <td>
          <%=  @case.docket_number %>
        </td>
      </tr>
      <tr>
      <td class="col-one">
          <strong>Judge:</strong>
        </td>
      <td>
