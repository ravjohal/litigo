          <%= d.contact.first_name %> <%= d.contact.last_name %>
           <% end %>
      </td>
      </tr>
      <tr>
        <td class="col-one">
          <strong>Court:</strong>
        </td>
        <td>
          <%= @case.court %>
        </td>
      </tr>
      <tr>
        <td class="col-one">
          <strong>County:</strong>
        </td>
        <td>
          <%= @case.county %>
        </td>
      </tr>
      <tr>
        <td class="col-one">
           <strong>State:</strong>
        </td>
        <td>
          <%= @case.state %>
        </td>
      </tr>
        <tr>
        <td class="col-one">
