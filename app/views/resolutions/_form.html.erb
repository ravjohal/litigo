<%= simple_form_for([@case, @resolution]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :settlement_demand %>
    <%= f.input :jury_demand %>
    <%= f.input :resolution_amount %>
    <%= f.input :resolution_type, :collection => Resolution::TYPES %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
