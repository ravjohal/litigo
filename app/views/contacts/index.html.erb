<%= link_to 'New Contact', new_contact_path, :class => "action-button" %>

<div class="table-responsive">
  <h3>Contacts</h3>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Contact type</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.first_name + ' ' + contact.last_name %></td>
            <td><%= contact.contactable_type %></td>
            <td><%= contact.email %></td>
            <td><%= link_to 'Show', contact %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>


