<p id="notice"><%= notice %></p>

<p>
  <strong>Task:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Case(s):</strong>
  <%= @task.cases.map {|c| c.name}.join(', ') %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>Completed:</strong>
  <%= @task.completed %>
</p>

<p>
  <strong>Sms reminder:</strong>
  <%= @task.sms_reminder %>
</p>

<p>
  <strong>Email reminder:</strong>
  <%= @task.email_reminder %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<div class="text-center link-pad">
<%= link_to 'Edit', edit_task_path(@task), :class => 'dark' %> |
<%= link_to 'Back To Tasks', tasks_path, :class => 'dark' %>
</div>
