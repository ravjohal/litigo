<%= simple_form_for([@case, @incident]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :incident_date %>
    <%= f.input :statute_of_limitations %>
    <%= f.input :defendant_liability %>
    <%= f.input :alcohol_involved %>
    <%= f.input :weather_factor %>
    <%= f.input :property_damage %>
    <%= f.input :insurance_provider, collection: Incident::INSURANCE_PROVIDERS %>
    <%= f.input :airbag_deployed %>
    <%= f.input :speed %>
    <%= f.input :police_report %>
    <%= f.input :towed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
