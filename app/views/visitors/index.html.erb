<main>
 	  <div class="shadow"></div>
      <div class="tagline">
      Legal Insights to Build a Winning Case
      </div>
      <div class="trial">
          SIGN UP FOR OUR BETA LIST
      </div>
      <div class="formarea">
        <%= form_tag new_user_registration_path, :method => "get" do %>
          <%= text_field_tag :email, nil, :placeholder => "ENTER YOUR EMAIL ADDRESS", :class => "email" %>
          <%= submit_tag "REQUEST BETA", :class => "sub" %>
        <% end %>

