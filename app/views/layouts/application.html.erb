 <script>
    $(document).ready(function() { $("#e1, #e2").select2();
   });
  </script>
  <script type="text/javascript" src="https://www.dropbox.com/static/api/2/dropins.js" id="dropboxjs" data-app-key="8ctf0xla2z9adpg"></script>
</head>
  <body>
  <% if user_signed_in? %> 
    <header>
      <%= render 'layouts/navigation' %>
    </header> 
        <div id="wrapper">
            <div id="sidebar-wrapper">
                  <%= render 'layouts/side_navigation' %>
            </div>
            <div id="page-content-wrapper">
                <div class="page-content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <%= render 'layouts/messages' %>
                                <%= yield %>
                            </div>
                        </div>
                    </div>
                </div>
                 <button href="#menu-toggle" class="side-menu-toggle" id="menu-toggle"> 
                          <span class="glyphicon glyphicon-chevron-left"></span>        
                    </button>
            </div>
        </div>
         <% else %>

          <div class="main">
                <%= render 'layouts/messages' %>
                <%= yield %>
          </div>

      </div>
      <% end %>



  <script>
      $('document').ready(function() {
          setTimeout(function() {
      $('.alert, .alert-success').fadeOut();
        }, 2000);
      });
  </script>

  <script>
    $('#menu-toggle').click(function(e) {
        e.preventDefault();
        $('#wrapper').toggleClass("toggled");
        $('.glyphicon-chevron-left').toggleClass("glyphicon-chevron-right");
        $('.side-menu-toggle').toggleClass("side-menu-toggled");
    });
  </script>


  </body>
</html>
