<%= simple_form_for(@injury) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type %>
    <%= f.input :region %>
    <%= f.input :code %>
    <%= f.input :dominant_side %>
    <%= f.input :joint_fracture %>
    <%= f.input :displaced_fracture %>
    <%= f.input :disfigurement %>
    <%= f.input :impairment %>
    <%= f.input :permanence %>
    <%= f.input :disabled %>
    <%= f.input :disabled_percent %>

TREATMENT:
    <%= f.input :surgery %>
    <%= f.input :surgery_count %>
    <%= f.input :surgery_type %>
    <%= f.input :casted_fracture %>
    <%= f.input :stitches %>
    <%= f.input :future_surgery %>
    <%= f.input :future_medicals %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
