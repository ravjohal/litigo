<div id="index-buttons">
  <ul>
    <li><%= render 'new_button' %></li>
  </ul>
</div>

<div style="margin-top: 70px;">
  <h3>Contacts</h3>
</div>
<div class="table-responsive">
  <table id="tasks" class="table table-striped table-hover rowlink time_entries_table">
    <thead class="user-table-head">
    <tr>
      <th>Timekeeper</th>
      <th>Date</th>
      <th>Case</th>
      <th>Description</th>
      <th>Hours</th>
    </tr>
    </thead>
    <tbody>
    <% @time_entries.each do |time_entry| %>
      <tr data-id="<%= time_entry.id %>">
        <td  style="vertical-align: middle;"><%= link_to time_entry.user.name, time_entry_path(time_entry) %></td>
        <td style="vertical-align: middle;"><%= time_entry.date %></td>
        <td class="mid-td"><div class="larger-td" style='padding-top:12px;'><%= time_entry.case.try(:name) %></td>
        <td style="vertical-align: middle;"><%= time_entry.description %></td>
        <td style="vertical-align: middle;"><%= time_entry.hours %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#new_modal, #assign_modal').click(function(event){
      $("#modal-window").html("<%= escape_javascript( render 'time_entries/form') %>");
    });
    <%= render :partial => 'datatable.js', :locals => { :sort_column => 0, :sort_order => 'asc'} %>
  });
</script>


