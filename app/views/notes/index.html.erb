<% if @case %>
 <div class="case-header">
    <div class="case-title">
          <div style="font-size: 24px;">
                <strong><%= @case.name %></strong><br>
          </div>
            <div id="case-buttons">
              <ul>
               <li><%= link_to "", :class => 'dark' do %>
          <span id="print" class="glyphicon glyphicon-print" title="Print Tasks"></span>
        <% end %></li>
                  <li><%= render 'new_button' %></li>
              </ul>
          </div>
    </div>
    <strong>Case #: </strong><%= @case.case_number %>
    
        <div class="container-fluid" style="padding: 0;">
              <div class="row">
                      <div class="col-md-12">
                            <%= render partial: 'shared/case_tabs' %>
                      </div>
              </div>
        </div>
</div>
<div class="incase-tabs-gap">
</div>

<% else %>
 <div id="index-buttons">
              <ul>
                <li><%= link_to "", :class => 'dark' do %>
                      <span id="print" class="glyphicon glyphicon-print" title="Print Tasks"></span>
                    <% end %>
                </li>
                  <li><%= render 'new_button' %></li>
              </ul>
   </div>
<% end %>
<div class="index-table-space">
<h3>My Notes</h3>
</div>
  <div class="table-responsive">
    <table id="tasks" class="table table-striped table-hover notes_table rowlink">
      <thead class="user-table-head">
      <tr>
        <th>Case</th>
        <th>Author</th>
        <th>Note</th>
        <th>Date</th>
        <th>Type</th>
      </tr>
      </thead>
      <tbody>
      <% @my_notes.each do |note| %>
        <tr data-id="<%= note.id %>">
          <td class="case_name"><%= note.case.name if note.case.present? %></td>
          <td><%= link_to note.author, note_path(note)  %></td>
          <td><div class="larger-td"><%= note.note %></div></td>
          <td><%= simple_format_datetime note.created_at %></td>
          <td><%= note.note_type %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<br />
<br />
<div class="index-table-space">
<% if @case %>
<h3>Case Notes</h3>
<% else %>
<h3>All Firm Notes</h3>
<% end %>
</div>
  <div class="table-responsive">
    <table id="tasks" class="table table-striped table-hover notes_table rowlink">
      <thead class="user-table-head">
      <tr>
        <th>Case</th>
        <th>Author</th>
        <th>Note</th>
        <th>Date</th>
        <th>Type</th>
      </tr>
      </thead>
      <tbody>
      <% @notes.each do |note| %>
        <tr data-id="<%= note.id %>">
          <td class="case_name doc-link"><%= note.case.name if note.case.present? %></td>
          <td><%= link_to note.author, note_path(note)  %></td>
          <td><div class="larger-td"><%= note.note %></div></td>
          <td><%= simple_format_datetime note.created_at %></td>
          <td><%= note.note_type %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

<script type="text/javascript">
$(document).ready(function() {
  $('#new_modal').click(function(event){
    $("#modal-window").html("<%= escape_javascript(render 'notes/form', new_note: @notes_a ) %>");
  });
  <%= render :partial => 'datatable.js', :locals => { :sort_column => 3, :sort_order => 'desc'} %>
});
</script>
