<%= javascript_include_tag 'tasks/form', 'data-turbolinks-track' => true %>
<%= simple_form_for(new_task) do |f| %>
  <%= f.error_notification %>

  <% if action_name == "index" || (controller_name == 'dashboards' && action_name == 'new') || (controller_name == 'task_lists' && action_name == 'new') %>
    <!--only render html from 'if' to 'end' if the controller action this form was rendered from was 'index'; reason for this is because this form is used in 'new' and 'edit' actions; reason we aren't checking for if action_name == 'new' is because this is a modal that is rendered from the index action -->
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <a class="close" style="padding-top: 15px;" data-dismiss="modal">Ã—</a>

          <h1>New Task</h1>
        </div>
        <div class="modal-body">
  <% end %>
  <table class="task-form table-condensed">
    <tbody>
    <tr>
      <td>
        <strong>Task:</strong>
      </td>
      <td colspan="2">
        <%= f.text_field :name, label: false, :class => 'table-input' %>
      </td>
    </tr>

    <tr>
      <td>
        <strong>Case:</strong>
      </td>
      <td colspan="2">
        <% if !@case %>
          <%= f.association :case, :collection => @firm.cases, :input_html => {:id => "task_select"}, label: false %>
        <% else %>
          <%= @case.name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Task Owner: </strong>
      </td>
      <td colspan="2">
        <%= f.association :owner, :collection => @firm.users, :selected => current_user.id, :input_html => {:id => "owner_select"}, label: false %>
      </td>
    </tr>
    <tr>
      <td>
        <div id="popup_task"></div>
        <strong>Secondary Owner: </strong>
      </td>
      <td colspan="2">
        <%= f.association :secondary_owner, :collection => @firm.users, :input_html => {:id => "secondary_owner_select"}, label: false, :include_blank => true %>
      </td>
    </tr>

    <tr>
      <td>
        <strong>Due Date:</strong>
      </td>
      <td colspan="2">
        <%= f.date_field :due_date, label: false, :class => 'table-input' %>
      </td>
    </tr>
    
    <tr>
      <td>
        <strong>Task Description:</strong>
      </td>
      <td class="big-row" colspan="2">
        <%= f.text_area :description, label: false, :class => 'table-text' %>
      </td>
    </tr>
<% if false %> <!-- START OF COMMENT -->
    <tr>
      <td>
        <strong>Add to Calendar:</strong>
      </td>

      <td colspan="2">

        <%= f.check_box :add_event, {:checked => false}, true, false %>

        <%= f.select :calendar_id, @user.active_calendars.map{ |c| ["#{c.namespace.full_name}: #{c.name}", c.id] }, include_blank: true, label: false, :class => 'table-input' %>
      </td>
    </tr>
<% end %> <!-- END OF COMMENT -->
    </tbody>
  </table>
  <br>

  <% if action_name == "index" || (controller_name == 'dashboards' && action_name == 'new') %>
    </div><!--end of modal-body-->

    <div class="modal-footer">
      <div class="pull-left">
        <a class="close" data-dismiss="modal">Cancel</a>
      </div>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-info", :style => 'font-size: 18px;' %>
  </div>

  <% if action_name == "index" || (controller_name == 'dashboards' && action_name == 'new') %>
    </div><!--end of modal-footer-->
    </div><!--end of modal-content-->
    </div><!--end of modal-dialog-->
  <% end %>

<% end %>
<script type="text/javascript">
    $(document).ready(function() {
        var self =  $("#popup_task");
        $(document).mousemove(function (e) {
            mX = e.pageX;
            mY = e.pageY;
        }).mouseover();
        $('select').select2()
                .on("change", function(e) { // When user select Value then change event fire
                    $('#popup_task').hide();
                })
                .on("select2-highlight", function(e) { //when user mouse over or highlight value using keyboard navigation keys ("arrow keys")
                    var p = 'P: ';
                    var f = 'F: ';
                    //contact_name = $target.text()
                    var idd = e.val.split(':')[0];
                    $.ajax({
                        url: '/users/'+ idd,
                        type: 'GET',
                        // data: 'contact_name=' + contact_name,
                        dataType: 'json',
                        beforeSend: function (xhr) {
                            xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'));
                        },
                        success: function(data){
                            $('#popup_task').css({
                                'opacity': '0.1',
                                'top': mY-120,
                            }).animate({
                                'opacity': '1.0',
                            }, 300);
                            if(data.fax_number == null || data.fax_number == '') { data.fax_number = ''; f = '';} else {f = '<br>' + 'F: '}
                            if(data.phone_number == null || data.phone_number == '') { p = '';} else {p = '<br>' + 'P: '}
                            if(data.address == null) {data.address = '' ;}
                            $("#popup_task").html(data.first_name + ' ' + data.last_name + '<br>' +
                                    data.address + p + data.phone_number  +
                                    f + data.fax_number
                            ).fadeIn( "slow").show();
                            setTimeout(function(){
                                $("#popup_task").hide();
                            }, 5000);/* do something meaningful with data */},

                        error: function(xhr, status, response) {/* your error callback */}

                    });
                });
    });
</script>
