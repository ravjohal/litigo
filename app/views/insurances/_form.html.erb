<%= simple_form_for(@insurance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company %>
    <%= f.input :insurance_provider %>
    <%= f.input :policy_limit %>
    <%= f.input :amount_paid %>
    <%= f.input :claim_number %>
    <%= f.input :policy_holder %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
