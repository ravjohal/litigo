
<div id="modal-window" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Synchronize Google Calendars</h4>
      </div>
      <div class="modal-body">
        <%= form_for(:select_calendar, :url => {:action => 'select_calendar'}, :method => :get, :remote => true, :html => {:class => 'select_calendar'}) do |f| %>
          <ul>
          <% @calendars.each do |cal| %>
            <li><%= f.label cal[:summary] %><%= f.check_box cal.google_id%></li>
          <% end %>
          </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit 'Save changes', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" charset="utf-8">
  $('.select_calendar').on('submit', function() {
    $('#modal-window').modal('hide');
  });
</script>