<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>


    <%= f.input :contactable_type, :label => 'Contact Type', :collection => ['Attorney', 'Client', 'Witness', 'Plantiff', 'Defendant','General', ]%>
    <%= f.input :first_name %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :phone_number %>
    <%= f.input :fax_number %>
    <%= f.input :email %>
    <%= f.input :gender, :collection => ['M', 'F'], as: :radio_buttons %>
    <%= f.input :age %>

    <%= f.button :submit, :class =>"btn btn-default" %>
<% end %>
