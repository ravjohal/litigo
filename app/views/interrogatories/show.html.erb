<div class="case-header">
    <div class="case-title">
          <div style="font-size: 24px;">
                <strong><%= @case.name %></strong><br>
          </div>
            <div id="case-buttons">
              <ul>
                  <li><%= link_to 'Edit', edit_case_interrogatory_path(@case, @interrogatory), :class => 'dark' %></li>
                  <!-- <li><%= link_to cases_path,  :class => 'dark' do %><span data-tip="Back" class="glyphicon glyphicon-arrow-left tip"></i> <% end %></li> -->
                  <li><%= link_to "",  :class => 'dark' do %><span id="print" class="glyphicon glyphicon-print" title="Print Screen"></i> <% end %></li>
              </ul>
          </div>
    </div>
    <strong>Case #: </strong><%= @case.case_number %>
    
        <div class="container-fluid" style="padding: 0;">
              <div class="row">
                      <div class="col-md-12">
                            <%= render partial: 'shared/case_tabs' %>
                      </div>
              </div>
        </div>
</div>

<div class="top-table-container">
<table id="info-table3">
<thead>
  <tr class="right-top">
    <td colspan="4" class="gray-back">
      <strong>Interrogatory Summary</strong>
    </td>
  </tr>
</thead>
  <tbody>
  <tr>
          <td class="right">
              <strong>Question</strong>
          </td>
          <td class="right">
              <strong>Response</strong>
          </td>
          <td class="right">
              <strong>Requester</strong>
          </td>
           <td class="right">
              <strong>Response</strong>
          </td>      
      </tr>
      <% @interrogatory_children.each do |interrogatory| %>
      <tr>
          <td>
              <%= interrogatory.try(:question) %>
          </td>
          <td>
              <%= interrogatory.try(:response) %>
          </td>
          <td>
              <%= interrogatory.try(:requester) %>
          </td>
          <td>
              <%= interrogatory.try(:responder) %>
          </td>        
      </tr>
      <% end %>
  </tbody>
</table>
</div>
<script type='text/javascript'>
  $(function() {
    $('#print').tipsy({gravity: 'ne', fade: true});
  });
</script>