<% if @case %>
  <ul class="breadcrumb">
    <li><strong>Case Name: </strong><%= @case.name %></li>
    <li class="active-breadcrumb"><strong>Case #: </strong><%= @case.id %></li>
  </ul>

  <%= render partial: 'shared/case_tabs' %>
<% end %>

<%= render 'new_button' %>

<h3>My Notes</h3>
  <div class="table-responsive">
    <table id="tasks" class="table table-striped table-hover rowlink">
      <thead class="user-table-head">
      <tr>
        <th>Author</th>
        <th>Case</th>
        <th>Date</th>        
        <th>Note</th>
        <th>Type</th>
      </tr>
      </thead>
      <tbody>
      <% @my_notes.each do |note| %>
        <tr data-id="<%= note.id %>">
          <td><%= link_to note.author, note_path(note)  %></td>
          <td class="case_name"><%= link_to note.case.name,  case_path(note.case) if note.case.present? %></td>
          <td><%= note.created_at.strftime("%m/%d/%Y") %></td>
          <td><%= note.note %></td>
          <td><%= note.note_type %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<br />
<br />
<% if @case %>
<h3>All Case Notes</h3>
<% else %>
<h3>All Firm Notes</h3>
<% end %>
  <div class="table-responsive">
    <table id="tasks" class="table table-striped table-hover rowlink">
      <thead class="user-table-head">
      <tr>
        <th>Author</th>
        <th>Case</th>
        <th>Date</th>
        <th>Note</th>
        <th>Type</th>
      </tr>
      </thead>
      <tbody>
      <% @notes.each do |note| %>
        <tr data-id="<%= note.id %>">
          <td><%= link_to note.author, note_path(note)  %></td>
          <td class="case_name doc-link"><%= link_to note.case.name,  case_path(note.case) if note.case.present? %></td>
          <td><%= note.created_at.strftime("%m/%d/%Y") %></td>
          <td><%= note.note %></td>
          <td><%= note.note_type %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

<script type="text/javascript">
$(document).ready(function() {
  $('#new_modal').click(function(event){
    $("#modal-window").html("<%= escape_javascript(render 'notes/form', new_note: @notes_a ) %>");
  });
  <%= render :partial => 'datatable.js', :locals => { :sort_column => 1, :sort_order => 'asc'} %>
});
</script>
