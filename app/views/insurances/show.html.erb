<div class="case-header">
    <div class="case-title">
          <div style="font-size: 24px;">
                <strong><%= @case.name %></strong><br>
          </div>
            <div id="case-buttons">
              <ul>
                  <li><%= link_to 'Edit', edit_case_insurance_path(@case, @insurance), :class => 'dark' %></li>
                  <!-- <li><%= link_to cases_path,  :class => 'dark' do %><span data-tip="Back" class="glyphicon glyphicon-arrow-left tip"></i> <% end %></li> -->
                  <li><%= link_to "javascript:window.print()",  :class => 'dark' do %><span class="glyphicon glyphicon-print tip" data-tip="Print"></i> <% end %></li>
                  <li><%= link_to @case,  :class => 'dark', method: :delete, data: { confirm: 'WARNING! Deleting a case will remove all the case information from storage and you will not be able to retrieve it. Would you like to delete anyway?' } do %><span class="glyphicon glyphicon-trash tip" data-tip="Delete"></i> <% end %></li>
              </ul>
          </div>
    </div>
    <strong>Case #: </strong><%= @case.id %>
    
        <div class="container-fluid" style="padding: 0;">
              <div class="row">
                      <div class="col-md-12">
                            <%= render partial: 'shared/case_tabs' %>
                      </div>
              </div>
        </div>
</div>

<div class="top-table-container">
<table id="info-table3">
<thead>
  <tr class="right-top">
    <td colspan="2" class="gray-back">
      <strong>Insurance Summary</strong>
    </td>
  </tr>
</thead>
  <tbody>
      <tr>
        <td class="right">
        <strong>Insurance type:</strong>
        </td>
        <td>
        <%= @insurance.insurance_type %>
          
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Insurance Provider:</strong>
        </td>
        <td>
          <%= @insurance.insurance_provider %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Policy Limit:</strong>
        </td>
        <td>
          <%= @insurance.policy_limit %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Claim Number:</strong>
        </td>
        <td>
          <%= @insurance.claim_number  %>
        </td>
      </tr>
        <tr>
        <td class="right">
          <strong>Policy Holder:</strong>
        </td>
        <td>
          <%= @insurance.policy_holder %>
        </td>
      </tr>
  </tbody>
</table>
</div>

<script>
     $('.tip').tipr({
      'speed': 500,
      'mode': 'top'
     });
</script>