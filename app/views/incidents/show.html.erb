<div class="case-header">
    <div class="case-title">
          <div style="font-size: 24px;">
                <strong><%= @case.name %></strong><br>
          </div>
            <div id="case-buttons">
              <ul>
                  <li><%= link_to 'Edit', edit_case_incident_path(@case, @incident), :class => 'dark' %></li>
                  <!-- <li><%= link_to cases_path,  :class => 'dark' do %><span data-tip="Back" class="glyphicon glyphicon-arrow-left tip"></i> <% end %></li> -->
                  <li><%= link_to "javascript:window.print()",  :class => 'dark' do %><span class="glyphicon glyphicon-print tip" data-tip="Print"></i> <% end %></li>
                  <li><%= link_to @case,  :class => 'dark', method: :delete, data: { confirm: 'WARNING! Deleting a case will remove all the case information from storage and you will not be able to retrieve it. Would you like to delete anyway?' } do %><span class="glyphicon glyphicon-trash tip" data-tip="Delete"></i> <% end %></li>
              </ul>
          </div>
    </div>
    <strong>Case #: </strong><%= @case.id %>
    
        <div class="container-fluid" style="padding: 0;">
              <div class="row">
                      <div class="col-md-12">
                            <%= render partial: 'shared/case_tabs' %>
                      </div>
              </div>
        </div>
</div>

<div style="margin-top: 182px;" class="top-table-container">
<table id="info-table3">
<thead>
  <tr class="right-top">
    <td colspan="2" class="gray-back">
      <strong>Incident Summary</strong>
    </td>
  </tr>
</thead>
  <tbody>
      <tr>
        <td class="right">
        <strong>Incident date:</strong>
        </td>
        <td>
        <%= @incident.incident_date %>
          
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Statute of limitations:</strong>
        </td>
        <td>
          <%= @incident.statute_of_limitations %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Defendant Liability:</strong>
        </td>
        <td>
          <%= @incident.defendant_liability %>%
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Alcohol Involved?:</strong>
        </td>
        <td>
          <%= boolean_as_yesno @incident.alcohol_involved  %>
        </td>
      </tr>
        <tr>
        <td class="right">
          <strong>Weather a factor:</strong>
        </td>
        <td>
          <%= boolean_as_yesno @incident.weather_factor %>
        </td>
      </tr>
        <tr>
        <td class="right">
          <strong>Property Damage ($):</strong>
        </td>
        <td>
          <%= number_to_currency(@incident.property_damage, precision: 2) %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Airbag Deployed:</strong>
        </td>
        <td>
          <%= boolean_as_yesno @incident.airbag_deployed %>
        </td>
      </tr>
          <tr>
        <td class="right">
          <strong>Speed of Bullet Car:</strong>
        </td>
        <td>
          <%= @incident.speed %> m.p.h.
        </td>
      </tr>
         <tr>
        <td class="right">
          <strong>Police Report:</strong>
        </td>
        <td>
          <%= boolean_as_yesno @incident.police_report %>
        </td>
      </tr>
         <tr>
        <td class="right">
          <strong>Towed:</strong>
        </td>
        <td>
          <%= boolean_as_yesno @incident.towed %>
        </td>
      </tr>
  </tbody>
</table>

<table id="insurance-table">
<thead>
  <tr class="right-top">
    <td colspan="5" class="gray-back">
      <strong>Insurance Summary</strong>
    </td>
  </tr>
