<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>
<table class="contact-form table-condensed">
        <tbody>
            <tr>
                <td>
                    <strong>Company Name:</strong>
                </td>
                <td>
                    <%= f.text_field :name, label: false, :class => 'table-input', placeholder: 'Allstate' %>
                </td>
            </tr>
               <tr>
                <td>
                    <strong>Company Address:</strong>
                </td>
                <td>
                    <%= f.text_field :address, label: false, :class => 'table-input', placeholder: '123 Easy St' %>
                </td>
            </tr>
            <tr>
                <td>
                    <strong>City:</strong>
                </td>
                <td>
                    <%= f.text_field :city, label: false, :class => 'table-input', placeholder: 'San Francisco' %>
                </td>
            </tr>
             <tr>
                <td>
                    <strong>State:</strong>
                </td>
                <td>
                    <%= f.select :state, us_states, label: false, :class => 'table-input', :include_blank => true %>
                </td>
            </tr>
             
              <tr>
                <td>
                    <strong>Zipcode:</strong>
                </td>
                <td>
                    <%= f.text_field :zipcode, label: false, :class => 'table-input', placeholder: '94109' %>
                </td>
            </tr>

             <tr>
                <td>
                    <strong>Phone:</strong>
                </td>
                <td>
                    <%= f.telephone_field :phone, label: false, :class => 'table-input', :id => 'contact_phone', placeholder: '(___) ___-___' %>
                </td>
            </tr>
        </tbody>
      </table>

            <div class="form-actions">
                <%= f.button :submit, :class =>"sub2-small" %>
            </div>
  <% end %>
<script>
  $(document).ready(function() { $("td select").select2(); });
</script>
