

<div class="authform">
  <%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
    <h3><%= t 'devise.invitations.edit.header' %></h3>
    <%= devise_error_messages! %>
    <%= f.hidden_field :invitation_token %>
    <div class="form-group">
      <%= f.input :first_name, :autofocus => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :last_name, :autofocus => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :password, :autofocus => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      		<%= f.input :password_confirmation, :autofocus => true, :class => 'form-control' %>
    </div>
    <div class="center-term">
    By creating an account you agree to the <%= link_to 'Terms of Service', terms_path, :class => 'center-link-term'  %>
    </div>
     <%= f.submit t("devise.invitations.edit.submit_button"), :class => 'btn-block'%>
  <% end %>

</div>

