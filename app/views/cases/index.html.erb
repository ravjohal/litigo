<%= render 'new_button' %>

    <div class="table-responsive">
      <table id="cases" class="table table-striped table-hover rowlink" data-source="<%= cases_path %>">
        <thead class="user-table-head">
          <tr>
            <th>Case Name</th>
            <th>Case Number</th>
            <th>Case Type</th>
            <th>Total Medical Bills</th>
            <th>Case Summary</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>

<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

<script type="text/javascript">
$(document).ready(function() {
  $('#new_modal').click(function(event){
    $("#modal-window").html("<%= escape_javascript(render 'cases/form', new_case: Case.new ) %>");
  });
  var table = $('.table').dataTable({
    language: {
      search: "_INPUT_",
      searchPlaceholder: "Search or Filter"
    },
    aaSorting: [[ 1, "desc" ]],
    bProcessing: true,
    bServerSide: true,
    sAjaxSource: $('#cases').data('source')
  });
  $('.table tbody').on( 'click', 'tr', function (e) {
    var id = $(e.currentTarget).data('id');
    $('table.rowlink').rowlink()
  });
});
</script>




  


