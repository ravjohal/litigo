<% if @user.show_onboarding %>
  <h3>Welcome to Litigo!</h3>
  <p>Click <%= link_to 'here', :controller => 'users' , :action => 'start_google_oauth', :id => @user.id %> to import your google contacts and calendar.</p>

<% else %>

  <h3>User</h3>
  <p>Name: <%= @user.name if @user.name %></p>
  <p>Email: <%= @user.email if @user.email %></p>
  <p>Show Onboarding: <%= @user.show_onboarding if @user.show_onboarding %></p>

<% end %>