<ol class="breadcrumb">
  <li><%= link_to 'Cases', cases_path %></li>
  <li class="active-breadcrumb"><%= @case.name %></li>
</ol>

<%= render partial: 'shared/case_tabs' %>

<p id="notice"><%= notice %></p>

<div class="top-table-container">
<table id="info-table1">
<thead>
  <tr class="right-top">
    <td colspan="2">
      Case Administration
    </td>
  </tr>
</thead>
  <tbody>
    <tr>
      <td class="col-one">
        <strong>Case Name:</strong>
      </td>
       <td>
        <%= best_in_place @case, :name, :class => 'edit', :nil => "Click to edit" %>
      </td>
    </tr>
    <tr>
      <td class="col-one">
        <strong>Date Opened:</strong>
      </td>
        <td>
         <%= @case.created_at %>
        </td>
     </tr>
      <tr>
        <td class="col-one">
           <strong>Case Number:</strong>
        </td>
        <td>
          <%= @case.case_number %>
        </td>
      </tr>
      <tr>
        <td class="col-one">
          <strong>Docket Number:</strong>
        </td>
        <td>
          <%= best_in_place @case, :docket_number, :class => 'edit', :nil => "Click to edit" %>
        </td>
      </tr>
      <tr>
        <td class="col-one">
          <strong>Court:</strong>
        </td>
        <td>
          <%= best_in_place @case, :court, :class => 'edit', :nil => "Click to edit" %>
        </td>
      </tr>
      <tr>
        <td class="col-one">
          <strong>County:</strong>
        </td>
        <td>
          <%= best_in_place @case, :county, :class => 'edit', :nil => "Click to edit" %>
        </td>
      </tr>
      <tr>
        <td class="col-one">
           <strong>State:</strong>
        </td>
        <td>
          <%= best_in_place @case, :state, :type => :select, :collection => us_states, :class => 'edit'  %>
        </td>
      </tr>
  </tbody>
</table>
<table id="info-table2">
<thead>
  <tr class="right-top">
    <td colspan="2">
      Contacts Assigned to Case
    </td>
  </tr>
</thead>
  <tbody>
      <tr>
        <td class="right">
           <strong>Plaintiff(s):</strong>
        </td>
        <td>
          <% @case.contacts.where("type = 'Plaintiff'").each do |p| %>
          <%= p.first_name %> <%= p.last_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="right">
            <strong>Defendant(s):</strong>
        </td>
        <td>
          <% @case.contacts.where("type = 'Defendant'").each do |d| %>
          <%= d.first_name %> <%= d.last_name %>
           <% end %>
        </td>
      </tr>
      <tr>
        <td class="right">
            <strong>Assigned Attorney(s):</strong>
        </td>
        <td>
          <%= @case.contacts.where("type = 'Attorney'").size %>
          <% @case.contacts.where("type = 'Attorney'").each do |a| %>
          <%= a.first_name %> <%= a.last_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="right">
           <strong>Assigned Staff(s):</strong>
        </td>
        <td>
          <% @case.contacts.where("type = 'Staff'").each do |s| %>
          <%= s.first_name %> <%= s.last_name %>
          <% end %>
        </td>
      </tr>
  </tbody>
</table>
</div>

<div class="bottom-table-container">
<table id="info-table3">
<thead>
  <tr class="right-top">
    <td colspan="4">
      General Overview
    </td>
  </tr>
</thead>
  <tbody>
      <tr>
        <td class="right">
           <strong>Type:</strong>
        </td>
        <td>
          <%= best_in_place @case, :case_type, :type => :select, :collection => Case::TYPES, :class => 'edit'  %>
        </td>
        <td class="right">
          <strong>Sub-type:</strong>
        </td>
        <td>
          <%= best_in_place @case, :subtype, :type => :select, :collection => Case::SUB_TYPES, :class => 'edit'  %>
        </td>
      </tr>
      <tr>
        <td class="right">
            <strong>Case Summary:</strong>
        </td>
        <td colspan="3">
          <%= best_in_place @case, :description, :type => :textarea, :class => 'edit', :nil => "Click to edit" %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Status:</strong>
        </td>
        <td>
          <%= best_in_place @case, :status, :type => :select, :collection => {"1" => "Open", "2" => "Pending", "3" => "Closed"}, :class => 'edit' %>
        </td>
         <td class="right">
          <strong>Date Closed:</strong>
        </td>
        <td>
          <%= best_in_place @case, :closing_date, :type => :date, :class => 'edit', :nil => "Click to edit" %>
        </td>
      </tr>
  </tbody>
</table>
</div>


<div class="text-center link-pad">
<table id="info-table4">
  <tbody>
    <tr>
      <td id="left-td"><%= link_to cases_path,  :class => 'dark' do %><span data-tip="Back" class="glyphicon glyphicon-arrow-left tip"></i> <% end %></td>
      <td>
      </td>
      <td>
      </td>
      <td><%= link_to @case,  :class => 'dark-right', method: :delete, data: { confirm: 'WARNING! Deleting a case will remove all the case information from storage and you will not be able to retrieve it. Would you like to delete anyway?' } do %><span class="glyphicon glyphicon-trash tip" data-tip="Delete"></i> <% end %></td>
    </tr>
    <tbody>
  </table>
</div>

<script>
$( ".edit" ).hover(
  function() {
    $( this ).append( $( "<span class='glyphicon glyphicon-pencil'></span>" ) );
  }, function() {
    $( this ).find( "span:last" ).remove();
  }
);
</script>

<script>
     $('.tip').tipr({
      'speed': 500,
      'mode': 'top'
     });
</script>

