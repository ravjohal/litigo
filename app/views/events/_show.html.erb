<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <a class="close" data-dismiss="modal">Ã—</a>
      <h1>Calendar Event</h1>
    </div>
    <div class="modal-body">

      <p id="notice"><%= notice %></p>
      <p>
        <strong>Summary:</strong>
        <%= @event.summary %>
      </p>
      <p>
        <strong>Subject:</strong>
        <%= @event.subject %>
      </p>

      <p>
        <strong>Location:</strong>
        <%= @event.location %>
      </p>

      <p>
        <strong>Lawyer(s):</strong>
        <%= @event.contacts.map {|c| c.name}.join(', ') %>
      </p>

      <p>
        <strong>Start:</strong>
        <%= @event.start.to_datetime %>
      </p>

      <p>
        <strong>End:</strong>
        <%= @event.end.to_datetime %>
      </p>


      <p>
        <strong>All day:</strong>
        <%= @event.all_day %>
      </p>

      <p>
        <strong>Invitee(s):</strong>
        <%= @event.users.map {|c| c.name}.join(', ') %>
      </p>

      <p>
        <strong>Attendee:</strong>
        <%= @event.event_attendees.map {|c| c.display_name}.join(', ') %>
      </p>

      <p>
        <strong>Reminder:</strong>
        <%= @event.reminder %>
      </p>

      <p>
        <strong>Status:</strong>
        <%= @event.status %>
      </p>

      <p>
        <strong>Case(s):</strong>
        <% @event.cases.each do |c| %>
        <%= link_to(c.name, case_path(c), class: 'case_link') %>
        <% end %>
      </p>

      <p>
        <strong>Notes:</strong>
        <%= @event.notes %>
      </p>

    </div><!--end of modal-body-->

    <div class="modal-footer">
      <div class="pull-left">
        <a class="close" data-dismiss="modal">Cancel</a>
      </div>

    </div><!--end of modal-footer-->
  </div><!--end of modal-content-->
</div><!--end of modal-dialog-->