<%= simple_form_for(@plantiff) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :married %>
    <%= f.input :employed %>
    <%= f.input :job_description %>
    <%= f.input :salary %>
    <%= f.input :parent %>
    <%= f.input :felony_convictions %>
    <%= f.input :last_ten_years %>
    <%= f.input :jury_likeability %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
