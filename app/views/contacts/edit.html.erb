<%= simple_form_for @contact do |f| %>

<div class="text-center">
<table id="info-table4">
  <tbody>
    <tr>
      <td id="left-td"><%= link_to contacts_path,  :class => 'dark' do %><span data-tip="Back" class="glyphicon glyphicon-arrow-left tip"></span> <% end %>
      </td>
      <td>
      </td>
      <td><%= link_to 'Cancel', @contact, :class => 'dark-right' %>
      </td>
      <td><%= f.submit :class => 'sub2-small dark-right', :value => 'Save'%>
      </td>
    </tr>
    </tbody>
  </table>
</div>


<table id="info-table3">
<thead>
  <tr class="right-top">
    <td colspan="2" class="gray-back">
      <Strong>Contact Information</Strong>
    </td>
  </tr>
</thead>
  <tbody>
      <tr>
        <td class="right">
        <strong>Contact Type:</strong>
        </td>
        <td>
          <%= f.select :type, Contact::TYPES, :class => 'table-input'  %>      
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>First Name:</strong>
        </td>
        <td>
          <%= f.text_field :first_name, :class => 'table-input' %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Middle Name:</strong>
        </td>
        <td>
        <%= f.text_field :middle_name, :class => 'table-input' %>
        </td>
      </tr>
        <tr>
        <td class="right">
          <strong>Last Name:</strong>
        </td>
        <td>
        <%= f.text_field :last_name, :class => 'table-input' %>
          
        </td>
      </tr>
      <tr>
            <td>
                  <strong>Corporation:</strong>
                </td>
                <td>
                    <%= f.check_box :corporation, label: false, :class => 'table-input' %>
                </td>
            </tr>  
              <tr>
           <td class="right">
                  <strong>Date of Birth:</strong>
                </td>
                <td>
                    <%= f.date_field :date_of_birth, label: false, :class =>'table-input' %>
                </td>
            </tr> 
          <tr>
             <td class="right">
                  <strong>SSN:</strong>
                </td>
                <td>
                    <%= f.text_field :ssn, label: false, class: 'table-input' %>
                </td>
            </tr> 
    
      <tr>
        <td class="right">
          <strong>Company or Firm:</strong>
        </td>
        <td>
          <%= f.text_field :company, :class => 'table-input' %>
        </td>
      </tr>
        <tr>
        <td class="right">
          <strong>Address:</strong>
        </td>
        <td>
        <%= f.text_field :address, :class => 'table-input' %>
          
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>City:</strong>
        </td>
        <td>
        <%= f.text_field :city, :class => 'table-input' %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>State:</strong>
        </td>
        <td>
        <%= f.select :state, us_states, :class => 'table-input', :include_blank => true  %>
          
        </td>
      </tr>
         <tr>
         <tr>
        <td class="right">
          <strong>Zipcode:</strong>
        </td>
        <td>
        <%= f.text_field :zip_code, :class => 'table-input' %>
          
        </td>
      </tr>
         <tr>
        <td class="right">
          <strong>Phone Number:</strong>
        </td>
        <td>
        <%= f.text_field :phone_number, :class => 'table-input' %>
          
        </td>
      </tr>
         <tr>
        <td class="right">
          <strong>Fax Number:</strong>
        </td>
        <td>
        <%= f.text_field :fax_number, :class => 'table-input' %>
          
        </td>
      </tr>
       <tr>
        <td class="right">
          <strong>Email Address:</strong>
        </td>
        <td>
        <%= f.email_field :email, :class => 'table-input' %>
          
        </td>
      </tr>
       <tr>
        <td class="right">
          <strong>Gender:</strong>
        </td>
        <td>
            <div class="radio">
                <%= f.radio_button :gender, 'M' %> 
  		          <%= label :gender, 'Male' %>
            </div>
            <div class="radio">
  		          <%= f.radio_button :gender, 'F' %>
  		          <%= f.label :gender, 'Female', :value => 'Female'%>
            </div>
        </td>
      </tr>
       <tr>
        <td class="right">
          <strong>Age:</strong>
        </td>
        <td>
        <%= f.number_field :age, :class => 'table-input-small' %>
        </td>
      </tr>
      
  </tbody>
</table>


<% end %>



<script>
  $(document).ready(function() { $("select").select2(); });
     $('.tip').tipr({
      'speed': 500,
      'mode': 'top'
     });
</script>

