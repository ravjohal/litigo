<% content_for :javascript do %>
    <script>
        $('document').ready(function() {
            setTimeout(function() {
                $('.alert-success').fadeOut();
            }, 2000);
        });
    </script>

    <script>
        $('#menu-toggle2, #menu-toggle').click(function(e) {
            e.preventDefault();
            $('#wrapper').toggleClass("toggled");
            $('.glyphicon glyphicon-align-justify').toggleClass("glyphicon glyphicon-align-justify");
            $('.side-menu-toggle').toggleClass("side-menu-toggled");
        });
    </script>
    <script>
        $('#print').click(function(e) {
            e.preventDefault();
            $('#wrapper').toggleClass("toggled");
            $('.glyphicon glyphicon-align-justify').toggleClass("glyphicon glyphicon-align-justify");
            $('.side-menu-toggle').toggleClass("side-menu-toggled");
            window.print();
        });
    </script>
<% end %>