<% content_for :javascript do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('#add_payment').click(function(){
        $("#modal-window")
            .html("<%= escape_javascript(render 'invoices/payment_form', payment: @payment ) %>")
            .find('select').select2();
      });
    });
  </script>
<% end %>