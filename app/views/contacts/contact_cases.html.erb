<div class="case-header">
    <div class="case-title">
          <div style="font-size: 24px;">
                <strong><%= @contact.name %></strong><br>
          </div>
            <div id="case-buttons">
              <ul>
                  <li><%= link_to 'Edit', edit_contact_path(@contact), :class => 'dark' %></li>
                  <li><%= link_to "",  :class => 'dark' do %><span id="print" class="glyphicon glyphicon-print" title="Print Screen"></span> <% end %></li>
                  <li style="height: 30px;"><%= link_to @contact,  :class => 'dark', method: :delete, data: { confirm: 'WARNING! Deleting a contact will remove all the contact  information from storage and you will not be able to retrieve it. Would you like to continue?' } do %><span id="delete" class="glyphicon glyphicon-trash" title="Delete Contact"></span> <% end %></li>
              </ul>
          </div>
    </div>
    <strong><%= @contact.type %></strong>
    
        <div class="container-fluid" style="padding: 0;">
              <div class="row">
                      <div class="col-md-12">
                        <% if @contact.type != 'Company'%>
                            <%= render partial: 'contact_info_tabs' %>
                        <% else %>
                            <%= render partial: 'company_info_tabs' %>
                        <% end %> 
                      </div>
              </div>
        </div>
</div>
<div class="top-table-container">
  <div class="table-responsive">
      <table id="tasks" class="table table-striped table-hover rowlink companies_table">
        <thead class="user-table-head">
      <tr>
        <th>Case Number </th>
        <th>Case Name</th>
        <th>Role</th>
        <th>Status</th>
        <th>Attorney(s)</th>
        <th>Staff</th>
      </tr>
    </thead>

    <tbody>
      <% @cases.each do |case_| %>
        <tr data-id="<%= case_.id %>">
          <td  style="vertical-align: middle;"><%= link_to "#{case_.case_number}", case_path(case_) %> </td>
          <td  style="vertical-align: middle;"><%= case_.name %></td>
          <td  style="vertical-align: middle;"><% case_.case_contacts.where("contact_id = #{@contact.id}").each do |a| %>
                                                <%= a.role -%>
                                              <% end %></td>
          <td  style="vertical-align: middle;"><%= case_.status %></td>
          <td  style="vertical-align: middle;"><% case_.case_contacts.where("role = 'Attorney'").each do |a| %>
                                                <%= a.contact.first_name %> <%= a.contact.last_name -%>
                                              <% end %></td>
          <td  style="vertical-align: middle; text-align:center;"><% case_.case_contacts.where("role = 'Staff'").each do |s| %>
                                                                    <%= s.contact.first_name %> <%= s.contact.last_name -%>
                                                                  <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  $('#new_modal').click(function(event){
    $("#modal-window").html("<%= escape_javascript(render 'contacts/form', new_contact: @contacts_a ) %>");
  });
  <%= render :partial => 'datatable.js', :locals => { :sort_column => 0, :sort_order => 'asc'} %>
});
</script>
