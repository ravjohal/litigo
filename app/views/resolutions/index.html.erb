<p id="notice"><%= notice %></p>

<h1>Listing Resolutions</h1>

<table>
  <thead>
    <tr>
      <th>Case</th>
      <th>Firm</th>
      <th>Settlement demand</th>
      <th>Jury demand</th>
      <th>Resolution amount</th>
      <th>Resolution type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resolutions.each do |resolution| %>
      <tr>
        <td><%= resolution.case_id %></td>
        <td><%= resolution.firm_id %></td>
        <td><%= resolution.settlement_demand %></td>
        <td><%= resolution.jury_demand %></td>
        <td><%= resolution.resolution_amount %></td>
        <td><%= resolution.resolution_type %></td>
        <td><%= link_to 'Show', resolution %></td>
        <td><%= link_to 'Edit', edit_resolution_path(resolution) %></td>
        <td><%= link_to 'Destroy', resolution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

