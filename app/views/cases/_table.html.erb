<div class="table-responsive">
  <table id="<%= id %>" class="table table-striped table-hover rowlink cases_table" data-source="<%= send("#{id}_path") %>">
    <thead class="user-table-head">
    <tr>
      <th>Case Name</th>
      <th>Case Number</th>
      <th>Case Type</th>
      <th>Total Medical Bills</th>
      <th>Case Summary</th>
      <th>Status</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>
<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $('#<%= id %>').dataTable({
      language: {
        search: "_INPUT_",
        searchPlaceholder: "Search or Filter",
        lengthMenu: "Show _MENU_"
      },
      aaSorting: [[ 1, "desc" ]],
      bProcessing: true,
      bServerSide: true,
      sAjaxSource: $('#<%= id %>').data('source')
    });
  });
</script>