<div class="case-header">
      <div class="case-title">
          <div style="font-size: 24px;">
                <strong>Templates</strong>
          </div>
                <div id="case-buttons">
                      <ul>
                            <li><%= render 'new_button' %></li>
                      </ul>
                </div>
      </div>
                <strong style="color: white;">A</strong>

          <div class="container-fluid" style="padding: 0;">
                <div class="row">
                      <div class="col-md-12">
                                <%= render 'shared/doc_tabs' %>
                      </div>
                </div>
          </div>
  </div>
  <div class="incase-tabs-gap">
  </div>
  <div class="index-table-space">
  <h3>Firm Templates</h3>
  </div>
<div class="table-responsive">
  <table id="templates" class="table table-striped template_table">
    <thead class="user-table-head">
    <tr>
      <th>Template Name</th>
      <th>Description</th>
      <th>Created By</th>
      <th style="text-align:center;">Create Doc</th>
      <th style="text-align:center;">Edit Temp</th>
      <th style="text-align:center;">Delete</th>
    </tr>
    </thead>
    <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><div class="larger-td"><%= template.name %></div></td>
        <td><%= template.description%></td>
        <td><%= template.user.try(:name)%></td>
        <td style="text-align:center;"><%= link_to template_path(template),  :class => 'dark-small' do %><span data-tip="View" class="glyphicon glyphicon-file"></span> <% end %></td>
        <td style="text-align:center;"><%= link_to edit_template_path(template),  :class => 'dark-small' do %><span data-tip="Edit" class="glyphicon glyphicon-pencil"></span> <% end %></td>
        <td style="text-align:center;"><%= link_to  template,  method: :delete, data: { confirm: 'Are you sure you want to delete this template?' }, :class => 'dark-small' do %><span class="glyphicon glyphicon-trash" data-tip="Delete"></span><% end %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%= render :partial => "templates_index_javascript" %>