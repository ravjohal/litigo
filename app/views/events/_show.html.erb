<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <a class="close" style="padding-top: 15px;" data-dismiss="modal">Ã—</a>
      <h1>Calendar Event</h1>
    </div>
    <div class="modal-body">

    <div style="margin-left:40px;">
      <p id="notice"><%= notice %></p>
      <p>
        <strong>Subject:</strong>
        <%= @event.subject %>
      </p>

      <p>
        <strong>Location:</strong>
        <%= @event.location %>
      </p>
         <p>
        <strong>Invitee(s):</strong>
        <%= @event.contacts.map {|c| c.name}.join(', ') %>
      </p>
        <p>
        <strong>Case:</strong>
        <% @event.cases.each do |c| %>
        <%= link_to(c.name, case_path(c), class: 'case_link') %>
        <% end %>
      </p>
      <p>
        <strong>All Day Event?</strong>
        <%= boolean_as_yesno @event.all_day %>
      </p>
      <p>
        <strong>Start Time:</strong>
        <%= @event.start.to_datetime.strftime("%b %e, %Y %l:%M %p") %>
      </p>

      <p>
        <strong>End Time:</strong>
        <%= @event.end.to_datetime.strftime("%b %e, %Y %l:%M %p") %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= @event.notes %>
      </p>
    </div>

    </div><!--end of modal-body-->

    <div class="modal-footer">
      <div class="pull-left">
        <a class="close" data-dismiss="modal">Cancel</a>
      </div>

    </div><!--end of modal-footer-->
  </div><!--end of modal-content-->
</div><!--end of modal-dialog-->