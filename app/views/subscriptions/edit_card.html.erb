
<div class="case-header">
  <div class="case-title">
    <div style="font-size: 24px;">
      <strong>Account Settings</strong><br>
    </div>
    <div id="case-buttons">
      <ul>
        <li></li>

      </ul>
    </div>
  </div>
  <strong style="color: white;">A</strong>

  <div class="container-fluid" style="padding: 0;">
    <div class="row">
      <div class="col-md-12">
        <%= render partial: 'shared/profile_tabs' %>
      </div>
    </div>
  </div>
</div>
<% if @own_subscription.present? %>
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <p class="signed_up"><%= date_to_input_regexp @own_subscription.created_at %> - You have signed up for the <strong><%= @own_subscription.plan.name %></strong> plan for just <strong><%= number_to_currency @own_subscription.plan.price * @firm.users.count %></strong> <%= @own_subscription.plan.price_description %>
          <%= link_to 'Details', @own_subscription, :class => 'cancel' %>
          <%= link_to 'Cancel', @own_subscription, method: :delete, :class => 'cancel' %>

        </p>
      </div>
    </div>
<% end %>
<div style="margin-top: 140px;">
  <%= form_for @subscription, html: { class: 'update_subscription' } do |f| %>
      <% if @subscription.errors.any? %>
          <div class="error_messages">
            <h2><%= pluralize(@subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>
            <ul>
              <% @subscription.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <table>
        <%= f.hidden_field :plan_id %>
        <%= f.hidden_field :stripe_card_token %>
        <tr>
          <td>
            <strong>Email:</strong>
          </td>
          <td>
            <%= f.text_field :email %>
          </td>
        </tr>

        <tr>
          <td>
            <strong>Credit Card Number</strong>
          </td>
          <td>
            <%= text_field_tag :card_number, nil, name: nil %>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Security Code on Card (CVV)</strong>
          </td>
          <td>
            <%= text_field_tag :card_code, nil, name: nil %>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Card Expiration</strong>
          </td>
          <td>
            <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
            <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
          </td>
        </tr>

        <tr>
          <td>
            <div id="stripe_error"></div>
          </td>
        </tr>
        <tr>
          <td>
          </td>
          <td>
            <%= f.submit 'Update', :class => 'btn btn-primary' %>
          </td>
        </tr>
      </table>
  <% end %>
</div>

<%= render :partial => "edit_javascript" %>
