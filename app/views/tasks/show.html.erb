<table id="info-table3">
<thead>
  <tr class="right-top">
    <td colspan="3" class="gray-back">
     <strong>Task</strong>
    </td>
  </tr>
</thead>
  <tbody>
      <tr>
        <td class="right">
            <strong>Task:</strong>
        </td>
        <td colspan="2">
            <%= @task.name %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Case(s):</strong>
        </td>
        <td colspan="2" class="doc-link">
          <%= raw(@task.cases.map {|c| link_to c.name, case_path(c).html_safe}.join(', ')) %>
          
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Owner:</strong>
        </td>
        <td colspan="2">
          <%= @task.owner.name if @task.owner %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Due date:</strong>
        </td>
        <td colspan="2">
            <%= @task.due_date.strftime("%m/%d/%Y") if @task.due_date %>
        </td>
      </tr>
         <tr>
        <td class="right">
          <strong>Estimated Time to Complete (hours):</strong>
        </td>
        <td>
          <%= @task.estimated_time %>
        </td>
        <td>
          <%= @task.estimated_time_unit %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Completed:</strong>
        </td>
        <td colspan="2">
          <%= @task.completed.strftime("%m/%d/%Y") if @task.completed.present? %>
        </td>
      </tr>
        <tr>
        <!-- <td class="right">
          <strong>Sms reminder:</strong>
        </td>
        <td colspan="2">
          <%= best_in_place @task, :sms_reminder, :as => :checkbox, :class => 'edit' %>
        </td>
      </tr>
       <tr>
        <td class="right">
          <strong>Email reminder:</strong>
        </td>
        <td colspan="2">
          <%= @task.email_reminder %>
        </td>
      </tr> -->
       <tr>
        <td class="right big-row">
          <strong>Description:</strong>
        </td>
        <td colspan="2" class="big-row">
          <%= @task.description  %>
        </td>
      </tr>
        
  </tbody>
</table>
<script type='text/javascript'>
  $(function() {
    $('#print').tipsy({gravity: 'n', fade: true});
    $('#delete').tipsy({gravity: 'ne', fade: true});
    $('#back').tipsy({gravity: 'n', fade: true});
  });
</script>


