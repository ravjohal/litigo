<%= simple_form_for(@resolution) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :case_id %>
    <%= f.input :firm_id %>
    <%= f.input :settlement_demand %>
    <%= f.input :jury_demand %>
    <%= f.input :resolution_amount %>
    <%= f.input :resolution_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
