<%= form_for :contact, url: contact_path(@contact), method: :patch do |f| %>

<div class="text-center">
<table id="info-table4">
  <tbody>
    <tr>
      <td id="left-td"><%= link_to contacts_path,  :class => 'dark' do %><span data-tip="Back" class="glyphicon glyphicon-arrow-left tip"></i> <% end %>
      </td>
      <td>
      </td>
      <td><%= link_to 'Cancel', @contact, :class => 'dark-right' %>
      </td>
      <td><%= f.submit :class => 'sub2-small dark-right', :value => 'Save'%>
      </td>
    </tr>
    </tbody>
  </table>
</div>


<table id="info-table3">
<thead>
  <tr class="right-top">
    <td colspan="2" class="gray-back">
      <Strong>Contact Information</Strong>
    </td>
  </tr>
</thead>
  <tbody>
      <tr>
        <td class="right">
        <strong>Contact Type:</strong>
        </td>
        <td>
          <%= f.select :type, Contact::TYPES %>      
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Company Name:</strong>
        </td>
        <td>
          <%= f.text_field :company %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>First Name:</strong>
        </td>
        <td>
          <%= f.text_field :first_name %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Middle Name:</strong>
        </td>
        <td>
        <%= f.text_field :middle_name %>
        </td>
      </tr>
        <tr>
        <td class="right">
          <strong>Last Name:</strong>
        </td>
        <td>
        <%= f.text_field :last_name %>
          
        </td>
      </tr>
        <tr>
        <td class="right">
          <strong>Address:</strong>
        </td>
        <td>
        <%= f.text_field :address %>
          
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>City:</strong>
        </td>
        <td>
        <%= f.text_field :city %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>State:</strong>
        </td>
        <td>
        <%= f.select :state, us_states %>
          
        </td>
      </tr>
  
         <tr>
        <td class="right">
          <strong>Phone Number:</strong>
        </td>
        <td>
        <%= f.text_field :phone_number %>
          
        </td>
      </tr>
         <tr>
        <td class="right">
          <strong>Fax Number:</strong>
        </td>
        <td>
        <%= f.text_field :fax_number %>
          
        </td>
      </tr>
       <tr>
        <td class="right">
          <strong>Email Address:</strong>
        </td>
        <td>
        <%= f.email_field :email %>
          
        </td>
      </tr>
       <tr>
        <td class="right">
          <strong>Gender:</strong>
        </td>
        <td>
        <div class="radio">
        <%= f.radio_button :gender, 'M' %> 
  		<%= label :gender, 'Male' %>
  		<%= f.radio_button :gender, 'F' %>
  		<%= f.label :gender, 'Female', :value => 'Female'%>
  		</div>
        </td>
      </tr>
       <tr>
        <td class="right">
          <strong>Age:</strong>
        </td>
        <td>
        <%= f.number_field :age %>
        </td>
      </tr>
  </tbody>
</table>


<% end %>



  <script>
    $(document).ready(function() { $("#note_select").select2(); });
  </script>


<script>
     $('.tip').tipr({
      'speed': 500,
      'mode': 'top'
     });
</script>

