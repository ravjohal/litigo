<ul class="breadcrumb">
  <li><strong>Case Name: </strong><%= @case.name %></li>
  <li class="active-breadcrumb"><strong>Case #: </strong><%= @case.id %></li>
</ul>

<%= render partial: 'shared/case_tabs' %>

<div class="text-center">
<table id="info-table4">
  <tbody>
    <tr>
      <td id="left-td"><%= link_to cases_path,  :class => 'dark' do %><span data-tip="Back" class="glyphicon glyphicon-arrow-left tip"></span> <% end %></td>
      <td>
      </td>
      <td>
      </td>
      <td><%= link_to @case,  :class => 'dark-right', method: :delete, data: { confirm: 'WARNING! Deleting a case will remove all the case information from storage and you will not be able to retrieve it. Would you like to delete anyway?' } do %><span class="glyphicon glyphicon-trash tip" data-tip="Delete"></span> <% end %>
       <%= link_to "javascript:window.print()",  :class => 'dark-right' do %><span class="glyphicon glyphicon-print tip" data-tip="Print"></i> <% end %>
      <%= link_to 'Edit', edit_case_incident_path(@case, @incident), :class => 'dark' %></td>
    </tr>
    <tbody>
  </table>
</div>

<table id="info-table3">
<thead>
  <tr class="right-top">
    <td colspan="2" class="gray-back">
      <strong>Incident Summary</strong>
    </td>
  </tr>
</thead>
  <tbody>
      <tr>
        <td class="right">
        <strong>Incident date:</strong>
        </td>
        <td>
        <%= @incident.incident_date %>
          
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Statute of limitations:</strong>
        </td>
        <td>
          <%= @incident.statute_of_limitations %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Defendant Liability:</strong>
        </td>
        <td>
          <%= @incident.defendant_liability %>%
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Alcohol Involved?:</strong>
        </td>
        <td>
          <%= boolean_as_yesno @incident.alcohol_involved  %>
        </td>
      </tr>
        <tr>
        <td class="right">
          <strong>Weather a factor:</strong>
        </td>
        <td>
          <%= boolean_as_yesno @incident.weather_factor %>
        </td>
      </tr>
        <tr>
        <td class="right">
          <strong>Property Damage ($):</strong>
        </td>
        <td>
          <%= number_to_currency(@incident.property_damage, precision: 0) %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Insurance Company for Defendant:
        </td>
        <td>
           <%= @incident.insurance_provider %>
        </td>
      </tr>
      <tr>
        <td class="right" style="text-indent: 40px;">
          Defendant Policy Limit:
        </td>
        <td>
           <%= number_to_currency @incident.defendant_limits, precision: 0 %>
        </td>
      </tr>
      <tr>
        <td class="right" style="text-indent: 40px;">
          Plaintiff Policy Limit:
        </td>
        <td>
           <%= number_to_currency @incident.plaintiff_limits, precision: 0 %>
        </td>
      </tr>
      <tr>
        <td class="right" style="text-indent: 40px;">
          UIM Policy Limit:
        </td>
        <td>
           <%= number_to_currency @incident.uim_limits, precision: 0 %>
        </td>
      </tr>
      <tr>
        <td class="right" style="text-indent: 20px;">
          <strong>Total Policy Limit(s):</strong>
        </td>
        <td>
           <%= number_to_currency @incident.policy_limit, precision: 0 %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Airbag Deployed:</strong>
        </td>
        <td>
          <%= boolean_as_yesno @incident.airbag_deployed %>
        </td>
      </tr>
          <tr>
        <td class="right">
          <strong>Speed of Bullet Car:</strong>
        </td>
        <td>
          <%= @incident.speed %> m.p.h.
        </td>
      </tr>
         <tr>
        <td class="right">
          <strong>Police Report:</strong>
        </td>
        <td>
          <%= boolean_as_yesno @incident.police_report %>
        </td>
      </tr>
         <tr>
        <td class="right">
          <strong>Towed:</strong>
        </td>
        <td>
          <%= boolean_as_yesno @incident.towed %>
        </td>
      </tr>
  </tbody>
</table>


<script>
     $('.tip').tipr({
      'speed': 500,
      'mode': 'top'
     });
</script>