<% content_for :javascript do %>
  <script type='text/javascript'>
    $(function () {
        $('#delete').tipsy({gravity: 'ne', fade: true});
        $('#print').tipsy({gravity: 'n', fade: true});
        $('#copy').tipsy({gravity: 'n', fade: true});
    });
  </script>
  <script>
    $(document).ready(function () {
        $('#copy_modal').click(function (event) {
            $("#modal-window").html("<%= escape_javascript(render 'cases/copy', existing_case: @case) %>");
        });
    });
  </script>
<% end %>