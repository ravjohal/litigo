
<%= link_to 'NEW TASK', new_task_path, {:class => "action-button", :id => "task_modal",  :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  %> 

  <h3>Tasks</h3>
  
  <div class="table-responsive">
    

    <%= table_for @tasks,
                    :table_html => { :class => "table table-striped table-hover rowlink" },
                    :sortable => true,
                    :sort_url => tasks_path do |task| %>
          <% task.column :name, :header => "Task", :link => true %>
          <% task.column :header => "Case(s)", :data => lambda {|task| task.cases.map {|c| c.name}.join(', ') }, :order => 'cases', :link => true %>
          <% task.column :description, :header => "Description", :link => true %>
          <% task.column :due_date, :header => "Due Date", :link => true %>
          <% task.column :completed, :header => "Completed", :link => true %>
         
          <% task.footer do %>
              <div class="pull-right">
                <%= will_paginate @tasks %>
              </div>
          <% end %>
      <% end %>

  </div>


<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

<script type="text/javascript">
$(document).ready(function() {
  $('#task_modal').click(function(event){
    $("#modal-window").html("<%= escape_javascript(render 'tasks/form', new_task: Task.new ) %>");
  });
});
</script>
  <script>
      $('table.rowlink').rowlink()
  </script>