<%= javascript_include_tag 'reports/cases_by_status_report', 'data-turbolinks-track' => true %>
<%= form_tag reports_count_of_cases_by_status_path, method: :get do %>
<div class="case-header">
    <div class="case-title">
          <div style="font-size: 24px;">
                <strong>Cases by Status</strong><br>
          </div>
            <div id="case-buttons">
              <ul>
             		<li><%= submit_tag "RUN REPORT", name: nil, :class => 'run-report' %></li>
              </ul>
          </div>
    </div>
    <div class="container-fluid" style="padding: 0; margin-top: 10px;">
              <div class="row">
                        <div class="col-md-3 col-xs-6">
                        Total Open: <br>
                          <%= @open_count %>
                        </div>
                        <div class="col-md-3 col-xs-6">
                        Total Closed: <br>
                          <%= @closed_count %>
                        </div>
                        <div class="col-md-9 col-xs-6">
                        </div>
              </div>
        </div>
    
</div>
<div class="incase-tabs-gap"></div>
<% end %>
<div style="margin-top: 72px;">
<div class="span6">
  <%= render template: 'dossier/reports/show', locals: {report: @count_of_cases_by_status_report.run} %>
</div>
