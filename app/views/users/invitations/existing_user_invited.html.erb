<div class="authform">
  <%= form_for(@user, :url => invitation_path(@user), :html => { :method => :put }) do |f| %>
    <h3>SIGN IN</h3>
    <br>
    <%= devise_error_messages! %>
    <%= f.hidden_field :invitation_token, :value => @invitation_token %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
      <% end -%>
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "Forgot password?", new_password_path(@user), :class => 'right' %>
      <% end -%>
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
      <% end -%>
       <%= f.submit 'SIGN IN', :class => 'btn-block' %>
<div class="center">
      Don't have an account? <%= link_to 'Sign up', new_registration_path(@user), :class => 'center-link'  %>
      </div>
  <% end %>
</div>
