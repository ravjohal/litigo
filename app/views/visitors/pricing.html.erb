      <div class="wrapper">
        <a href="index"class="navlogo marge"></a>
        <% if user_signed_in? %>
            <%= link_to 'SIGN OUT', destroy_user_session_path, :method=>'delete', :class=> 'sign-home' %>
        <% else %>
        <%= link_to 'SIGN IN', new_user_session_path, :class => 'sign-home' %>
        <% end %>
                <div id="header-links">
                      <ul id="header-links">
                          <li><%= link_to 'About', about_path %></li>
                          <li><%= link_to 'Pricing', pricing_path %></li>
                          <li><%= link_to 'Contact', contactlitigo_path %></li>
                          <li style="color:white; font-size:12px; font-weight: 400; padding-right: 15px; opacity: .6; letter-spacing: 1px;">Questions? (888) 444-2317</li>
                      </ul>
              </div>
      </div>
    </div>
    </header>


<div class="row">
  <div class="col-md-12">
    <div class="price-tagline">
        Try Litigo for free. 
    </div>
  </div>
</div>

<div class="row">
<div class="col-md-1 col-xs-1">
</div>
  <div class="col-md-10 col-xs-10">
     <div class="price-sub-mission">
        No committment - get started with just your email
    </div>
  </div>
  <div class="col-md-1 col-xs-1">
</div>
</div>

<div class="row">
  <div class="col-md-12 text-center">
     <div class="sign-up-price-page">
                    <%= form_tag new_user_registration_path, :method => "get" do %>
                   <%= submit_tag "START FREE TRIAL", :class => "sub-btn" %>
                        <% end %>
   </div>
   </div>
</div>

     <div class="row">
      <div class="col-md-3 col-xs-1">
      </div>
      <div class="col-md-6 col-xs-10 text-center price-container">
        <div style="font-size: 36px; margin-bottom: 15px; margin-top: 15px;">$15 <span style="font-size:24px;">per user / month</span></div>
        <div style="font-size: 14px; color: #aaa;">Clear and simple pricing.<p> Whether billed annually or month-to-month.</p></div>
        <hr class="price-divider">
              <div class="feature-list">
                                  <ul id="list-of-feat">
                                    <li><span class="glyphicon glyphicon-ok green" style="margin-right: 10px; font-size:90%;"></span>Case Management</li>
                                    <li><span class="glyphicon glyphicon-ok green" style="margin-right: 10px; font-size:90%;"></span>Saved Task Lists</li>
