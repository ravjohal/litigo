<div class="case-header">
    <div class="case-title">
          <div style="font-size: 24px;">
                <strong><%= @case.name %></strong><br>
          </div>
            <div id="case-buttons">
              <ul>
                  <li><%= link_to 'Edit', edit_case_path(@case), :class => 'dark' %></li>
                  <!-- <li><%= link_to cases_path,  :class => 'dark' do %><span data-tip="Back" class="glyphicon glyphicon-arrow-left tip"></i> <% end %></li> -->
                  <li><%= link_to "javascript:window.print()",  :class => 'dark' do %><span class="glyphicon glyphicon-print tip" data-tip="Print"></span> <% end %></li>
                  <li><%= link_to @case,  :class => 'dark', method: :delete, data: { confirm: 'WARNING! Deleting a case will remove all the case information from storage and you will not be able to retrieve it. Would you like to delete anyway?' } do %><span class="glyphicon glyphicon-trash tip" data-tip="Delete"></span> <% end %></li>
              </ul>
          </div>
    </div>
    <strong>Case #: </strong><%= @case.case_number %>
    
        <div class="container-fluid" style="padding: 0;">
              <div class="row">
                      <div class="col-md-12">
                            <%= render partial: 'shared/case_tabs' %>
                      </div>
              </div>
        </div>
</div>

<div class="top-table-container">
<table id="info-table1">
<thead>
  <tr class="right-top">
    <td colspan="2" class="gray-back">
      <strong>Case Summary</strong>
    </td>
  </tr>
</thead>
  <tbody>
    <tr>
      <td class="col-one">
        <strong>Date Opened:</strong>
      </td>
        <td>
         <%= @case.created_at %>
        </td>
     </tr>
      <tr>
        <td class="col-one">
           <strong>Trial Date:</strong>
        </td>
        <td>
          <%= @case.trial_date %>
        </td>
      </tr>
      <tr>
        <td class="col-one">
          <strong>Case Status:</strong>
        </td>
        <td>
          <%=  @case.status %>
        </td>
      </tr>
      <tr>
        <td class="col-one">
          <strong>Court:</strong>
        </td>
        <td>
          <%= @case.court %>
        </td>
      </tr>
  </tbody>
</table>
</div>

<hr class="invis">

<% if @last_3_notes %>
  <div class="bottom-table-container">
    <table id="info-table3">
      <thead>
        <tr class="right-top">
          <td colspan="4" class="gray-back">
            <strong>Last 3 Notes</strong>
          </td>
        </tr>
      </thead>
      <tbody>
          <tr>
            <td class="right">
                <strong>Author</strong>
            </td>
            <td class="right">
              <strong>Date</strong>
            </td>
            <td class="right">
              <strong>Note</strong>
            </td>            
          </tr>
        <% @last_3_notes.each do |note| %>
          <tr>
            <td>
              <%= note.author %>
            </td>
            <td>
              <%= note.created_at.strftime("%m/%d/%Y") %>
            </td>
            <td>
              <%= note.note %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>


<script>
     $('.tip').tipr({
      'speed': 500,
      'mode': 'top'
     });
</script>

