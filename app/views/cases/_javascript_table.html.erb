<% content_for :javascript do %>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
        $('#<%= id %>').dataTable({
            language: {
                search: "_INPUT_",
                searchPlaceholder: "<%= id.humanize.titleize %> Search",
                lengthMenu: "View _MENU_"
            },
            sDom: 'Rfrtlip',
            aaSorting: [[ 0, "desc" ]],
            bProcessing: true,
            bServerSide: true,
            sAjaxSource: $('#<%= id %>').data('source')
        });
    });
  </script>
<% end %>