<%= form_tag reports_cases_by_attorney_path, method: :get do %>
<div class="case-header">
    <div class="case-title">
          <div style="font-size: 24px;">
                <strong>Cases by Attorney</strong><br>
          </div>
            <div id="case-buttons">
              <ul>
             		<li><%= submit_tag "RUN REPORT", name: nil, :class => 'run-report' %></li>
              </ul>
          </div>
    </div>
    <!-- .collect {|contact| contact.name }) -->
        <div class="container-fluid" style="padding: 0; margin-top: 10px;">
              <div class="row">
                      	<div class="col-md-3 col-xs-6">
                      	Attorney<br>
                      		<%= collection_select :contact, :contact_id, @firm.contacts.where("type = 'Attorney'"), :id, :name, :include_blank => true, :class => 'table-input', :selected => @selected_attorney %>
                      	</div>
                      	<div class="col-md-9 col-xs-6">
                      	</div>
              </div>
        </div>
</div>
<div class="incase-tabs-gap"></div>
<% end %>
<div style="margin-top: 72px;">
<div class="span6">
  <%= render template: 'dossier/reports/show', locals: {report: @cases_by_attorney_report.run} %>
</div>
<script>
    $(document).ready(function() { $("select").select2({allowClear: true, placeholder: 'All Users'});
        });
  </script>