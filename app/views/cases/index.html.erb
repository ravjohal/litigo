<%= link_to 'New Case', new_case_path, :class => "action-button" %> 

<div class="table-responsive">
    <h3>Cases</h3>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Number</th>
            <th>Case Type</th>
            <th>Sub-type</th>
            <th>Description</th>
            <th>Medical Bills</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @cases.each do |case1| %>
            <tr>
              <td><%= case1.name %></td>
              <td><%= case1.number %></td>
              <td><%= case1.case_type %></td>
              <td><%= case1.subtype %></td>
              <td><%= case1.description %></td>
              <td><%= case1.medical_bills %></td>
              <td><%= link_to 'Show', case1 %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>

<%= link_to 'Add Case', new_modal_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  %>

<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

