<ol class="breadcrumb">
  <li><%= link_to 'Cases', cases_path %></li>
  <li><%= link_to @case.name, case_path(@case) %></li>
  <li class="active">Resolution</li>
</ol>

<%= render partial: 'shared/case_tabs' %>

<p id="notice"><%= notice %></p>


<table id="info-table3">
<thead>
  <tr class="right-top">
    <td colspan="2" class="gray-back">
      Resolution Summary
    </td>
  </tr>
</thead>
  <tbody>
      <tr>
        <td class="right">
          <strong>Settlement demand:</strong>
        </td>
        <td>
          <%= @resolution.settlement_demand %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Jury demand:</strong>
        </td>
        <td>
          <%= @resolution.jury_demand %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Resolution amount:</strong>
        </td>
        <td>
          <%= @resolution.resolution_amount %>
        </td>
      </tr>
      <tr>
        <td class="right">
          <strong>Resolution type:</strong>
        </td>
        <td>
          <%= @resolution.resolution_type %>
        </td>
      </tr>
  </tbody>
</table>



<div class="text-center link-pad">
<table id="info-table4">
  <tbody>
    <tr>
      <td id="left-td"><%= link_to cases_path,  :class => 'dark' do %><span data-tip="Back" class="glyphicon glyphicon-arrow-left tip"></i> <% end %></td>
      <td>
      </td>
      <td>
      </td>
      <td><%= link_to @case,  :class => 'dark-right', method: :delete, data: { confirm: 'WARNING! Deleting a case will remove all the case information from storage and you will not be able to retrieve it. Would you like to delete anyway?' } do %><span class="glyphicon glyphicon-trash tip" data-tip="Delete"></i> <% end %>
      <%= link_to 'Edit', edit_case_resolution_path(@case, @resolution), :class => 'dark' %></td>
    </tr>
    <tbody>
  </table>
</div>



<script>
$( ".edit" ).hover(
  function() {
    $( this ).append( $( "<span class='glyphicon glyphicon-pencil'></span>" ) );
  }, function() {
    $( this ).find( "span:last" ).remove();
  }
);
</script>

<script>
     $('.tip').tipr({
      'speed': 500,
      'mode': 'top'
     });
</script>