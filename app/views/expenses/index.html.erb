  <% if @case.present? %>
  <div class="case-header">
    <div class="case-title">
      <div style="font-size: 24px;">
        <strong><%= @case.name %></strong><br>
      </div>
      <div id="case-buttons">
        <ul>
                 <div id="top-custom">
        <ul>
      <li class="dropdown task-list">
        <%= link_to "", class: 'dropdown-toggle action-button', id: 'task-list-bnt', data: {toggle: "dropdown", :style => 'display:inline;'} do %>
          NEW COST
          <span class="caret"></span>
        <% end %>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1" style="margin-top: 10px; left: -22px;">
            <li style="padding: 0; display: inline;"><%= link_to "New Time Entry", @new_time_entry_path, { :id => "new_time_modal", :remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window2'} %></li>
            <li style="padding: 0; display: inline;"><%= link_to "New Expense", @new_path, { :id => "new_modal", :remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window'} %></li>
        </ul>
      </li>
    </ul>
    </div>
      </div>
    </div>
    <strong>Case #: </strong><%= @case.case_number %>
    <div class="container-fluid" style="padding: 0;">
      <div class="row">
        <div class="col-md-12">
          <%= render partial: 'shared/case_tabs' %>
        </div>
      </div>
    </div>
  </div>
  <% else %>
    <div class="case-header">
      <div class="case-title">
        <div style="font-size: 24px;">
          <strong>Expenses</strong><br>
        </div>
        <div id="case-buttons">
          <ul>
            <li><%= render 'new_button' %></li>
          </ul>
        </div>
      </div>
      <strong style="color: white;">A</strong>
      <div class="container-fluid" style="padding: 0;">
        <div class="row">
          <div class="col-md-12">
            <%= render partial: 'time_entries/time_entries_tabs' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="incase-tabs-gap">
  </div>
  <% if @case.present? %>
  <div style="margin-top: 70px;">
    <h3>Time Entries</h3>
  </div>
<div class="table-responsive">
  <table id="my_docs" class="table table-striped rowlink">
    <thead class="user-table-head">
    <tr>
      <th>Timekeeper</th>
      <th>Date</th>
      <th>Activity</th>
      <th>Charge Type</th>
      <th>Hours</th>
    </tr>
    </thead>
    <tbody>
    <% @time_entries.each do |time_entry| %>
      <tr data-id="<%= time_entry.id %>">
        <td><%= link_to time_entry.try(:user).try(:name), time_entry %></td>
        <td><%= time_entry.date.try(:strftime, "%b %e, %Y") %></td>
        <td><%= time_entry.activity %></td>
        <td><%= time_entry.charge_type %></td>
        <td><%= time_entry.hours %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br />
<br />
<% end %>
<div style="margin-top: 70px;">
  <h3>Expenses</h3>
</div>
  <div class="table-responsive">
    <table id="firm_docs" class="table table-striped rowlink">
      <thead class="user-table-head">
      <tr>
        <th>Submitted by</th>
        <th>Date</th>
        <th>Expense</th>
        <th>Amount</th>
      </tr>
      </thead>
      <tbody>
      <% @expenses.each do |expense| %>
        <tr data-id="<%= expense.id %>">
          <td><%= link_to expense.user.try(:name), @case.present? ? case_expense_path(@case, expense) : expense %></td>
          <td><%= expense.created_date.try(:strftime, "%b %e, %Y") %></td>
          <td><%= expense.expense %></td>
          <td><%= number_to_currency expense.amount %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div id="modal-window2" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
  <script type="text/javascript">
    $(document).ready(function() {
      $('#new_modal, #new_time_modal').click(function(event){
        $("#modal-window").html("<%= escape_javascript(render 'expenses/form' ) %>");
        $("#modal-window2").html("<%= escape_javascript( render 'time_entries/form' ) %>");
      });
      <%= render :partial => 'datatable.js', :locals => { :sort_column => 1, :sort_order => 'desc'} %>
    });
  </script>